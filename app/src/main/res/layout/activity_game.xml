<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.yeasin.coloringblocks.GameActivity">

    <Button
        android:id="@+id/button_play"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/player"
        android:backgroundTint="@color/colorRed"
        android:drawableTop="@drawable/ic_play_arrow_black_48dp"
        android:paddingTop="36dp"
        android:drawableTint="@color/colorWhite"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button_play"
        android:text="@string/app_name"
        android:paddingBottom="80dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"/>

    <Button
        android:id="@+id/button_share"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/player"
        android:layout_below="@id/button_play"
        android:drawableTop="@drawable/ic_share_black_36dp"
        android:drawableTint="@color/colorWhite"
        android:backgroundTint="@color/colorBlue"
        android:paddingTop="21dp" />

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_unit_id"/>

</RelativeLayout>
